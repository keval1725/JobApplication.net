@model JobApplication.Data.Models.Domain.Registration


<h1>Register</h1>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="User_Name"></label>
        <input type="text" class="form-control" asp-for="User_Name" placeholder="Enter Your Name">

    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Enter email">

    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
    </div>
    
    <input type="submit" class="btn btn-primary" value="Submit" />

</form>